---
import BaseLayout   from "../layouts/BaseLayout.astro";
import Header       from "../components/astro/Header.astro";
import BoardPicker  from "../components/astro/BoardPicker.astro";
import ButtonWallet from "../components/jsx/ButtonWallet.jsx";
import ButtonGame   from "../components/astro/ButtonGame.astro";

---
<BaseLayout>
	<Header/>
	<BoardPicker/>
	<div class="buttons">
		<ButtonWallet client:load/>
		<ButtonGame/>
	</div>
	
</BaseLayout>
<style is:global>
	.buttons{
		margin-top:3%;
	}
	.buttonWallet{
        background: #f2b137;
        box-shadow: inset 0 -8px 0 #cc8b13;
        padding-left: 34px !important;
        font-family:"outfit-bold";
        border:none;
        width:460px;
        padding:25px;
        cursor: pointer;
        border-radius: 15px;
        display:flex;
        flex-direction:row;
        align-items:center;
        justify-content:center;
        box-sizing:border-box;
        font-size:1.2em;
        text-align:center;
        text-align: center;
        margin: auto;
        color:#192A32;
        margin-bottom:3%;
        transition:.2s;
    }
    .buttonWallet:active{
        background: #ffcd6f;
        -webkit-box-shadow:inset 0 1px 0 #FFE5C4, inset 0 -3px 0 #915100;
        -moz-box-shadow:inset 0 1px 0 #FFE5C4, inset 0 -3pxpx 0 #915100;
        box-shadow:inset 0 1px 0 #FFE5C4, inset 0 -3px 0 #915100;
    }
    .buttonWallet:hover{
        background: #f7cb7a;
    }
    .fadeIn {
  -webkit-animation-name: fadeIn;
  animation-name: fadeIn;
  -webkit-animation-duration: 1s;
  animation-duration: 1s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  }
  @-webkit-keyframes fadeIn {
  0% {opacity: 0;}
  100% {opacity: 1;}
  }
  @keyframes fadeIn {
  0% {opacity: 0;}
  100% {opacity: 1;}
  } 

</style>